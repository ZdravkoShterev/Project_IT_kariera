@model Project_IT_kariera.Models.AddEvent;
<style>
    body {
        background: linear-gradient(to bottom, white, blue);
        color: #333;
        margin: 0;
        padding: 0;
    }
</style>
<form method="post" action="Add">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Add new project</h1>
                                    </div>


                                    <div class="form-group">
                                        <label for="" class="form-label">Name</label>
                                        <input type="text" class="form-control" asp-for="Name" />
                                    </div>
                                    <div class="form-group">
                                        <label for="" class="form-label">Description</label>
                                        <textarea class="form-control" rows="8" asp-for="Description"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="" class="form-label">Images</label>
                                        <input type="image" class="form-control" asp-for="Image" />
                                    </div>

                                    <div class="form-group">
                                        <label for="" class="form-label">Date</label>
                                        <input type="date" class="form-control" asp-for="Date" />
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <hr>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
